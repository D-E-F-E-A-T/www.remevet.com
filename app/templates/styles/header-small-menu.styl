&
	display    : block
	position   : fixed
	top        : 0
	left       : 100%
	width      : 100%
	height     : 100%
	overflow   : hidden
	transition : left 0.25s ease-out

	ul
		z-index    : 0
		display    : block
		background : rgba($colors-1st, 0.95)
		position   : absolute
		list-style : none
		padding    : 0 0 0 2em
		margin     : 0
		width      : inherit
		height     : inherit

		li
			display    : block
			position   : relative
			padding    : 0
			margin     : 0
			font-size  : 16pt
			box-shadow : 0.5em 0 0.5em 0em

			mixin-skew()

			$header-menu-max = 7
			$header-menu-add = 0.95em
			$header-menu-sum = $header-menu-add * $header-menu-max + 0.5em
			for $header-menu-i in (1..$header-menu-max)
				$header-menu-sum -= $header-menu-add
				$header-menu-i = ($header-menu-max+1) - $header-menu-i
				&:nth-last-child({$header-menu-i})
					left: $header-menu-sum

			a
				display      : block
				position     : relative
				line-height  : 2em
				padding      : 0 1em
				text-shadow  : 1px 1px 0px rgba(0, 0, 0, 0.33);
				mixin-font-heading()