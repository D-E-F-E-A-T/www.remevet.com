&
	// Toggle button
	a#header-button
		display         : block
		position        : absolute
		z-index         : 5
		right           : 0
		top             : 0
		margin          : 0 1em
		width           : 2em
		height          : $header-height - 25px
		background      : url('/static/images/header/menu-open.svg') no-repeat center center
		background-size : contain

		// Android 2.3 does not support SVG
		.no-svg &
			background-image    : url('/static/images/header/menu-open.png')
			background-position : center center
			background-size     : 100%

	&.toggle a#header-button
		left: 0
		background-image: url('/static/images/header/menu-close.svg')

		// Android 2.3 does not support SVG
		.no-svg &
			background-image    : url('/static/images/header/menu-close.png')


	// Menu
	nav#header-menu
		@import 'header-small-menu'

	&.toggle nav#header-menu
		left: 0
