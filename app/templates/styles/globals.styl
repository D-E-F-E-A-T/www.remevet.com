// angle that every box should have
$colors-1st    = #4d2a08
$colors-2nd    = #e67e17
$colors-normal = (rgba(255,255,255,0.7) #ba4eba #66ccaa #e6b650 #29b8ff #f067c2 #306eff #66cc66 #e65c67)
$colors-hover  = (rgba(255,255,255,  1) #9629cc #00cc88 #ffbf00 #0095ff #e617a1 #004CE6 #31cc29 #e62e4d)

$header-height = 105px

$skew = 25.62deg


mixin-skew()
	-webkit-transform : skew(-1 * $skew)
	-moz-transform    :	skew(-1 * $skew)
	-ms-transform     : skew(-1 * $skew)
	-o-transform      : skew(-1 * $skew)
	transform         : skew(-1 * $skew)

	& span
		display: block
		-webkit-transform : skew($skew)
		-moz-transform    :	skew($skew)
		-ms-transform     : skew($skew)
		-o-transform      : skew($skew)
		transform         : skew($skew)

mixin-after-fill()
	content  : " "
	display  : block
	position : absolute
	width    : 100%
	height   : 100%
	top      : 0
	left     : 0


mixin-font-heading()
	font-family : 'Cabin', sans-serif
	font-weight : 700



mixin-font-paragraph()
	font-size   : 17px
	font-family : 'Nobile', sans-serif
	font-weight : 400
	line-height : 1.5em


mixin-icon(name, pos, mask=no)
	background-image    : url('/static/icons/'(name)'.svg')
	background-repeat   : no-repeat
	background-size     : 100% auto
	background-position : 0 (-1 * pos)

	/.no-svg &
		background-image : url('/static/icons/'(name)'.png')

	if mask

		&:after
			background    : mask
			box-shadow    : 0 0 0 1px mask
			mixin-after-fill()

		&:hover:after
			display:none


mixin-social(size, mask=no)
	display  : block
	height   : size

	ul
		list-style : none
		padding    : 0
		margin     : 0

		li
			position    : relative
			width       : size
			line-height : size
			padding     : 0
			margin      : 0 0 0 .5em
			text-indent : -300em

			a
				position : relative
				display  : block
				width    : inherit
				height   : inherit

				&.facebook
					mixin-icon(social, (4 * size), mask)

				&.twitter
					mixin-icon(social, (14 * size), mask)

				&.email
					mixin-icon(social, (3 * size), mask)
