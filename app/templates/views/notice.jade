mixin notice(messages, type)
	each message in messages
		.alert-box(class=(type || ''), data-alert)
			span= message
			a(ref="#", class="close") &nbsp;&nbsp; &times;

if locals.NOTICE && locals.NOTICE.error && locals.NOTICE.error.length
	+notice(NOTICE.error, 'warning')

if locals.NOTICE && locals.NOTICE.info && locals.NOTICE.info.length
	+notice(NOTICE.info, 'info')

if locals.NOTICE && locals.NOTICE.success && locals.NOTICE.success.length
	+notice(NOTICE.success, 'success')

- NOTICE = undefined
