include /../templates/mixins/rainbow
include /../templates/mixins/ads

.cover.row.collapse

	.show-for-large-up.large-4.columns.gradient: .cover-left

		h2.color-primary ¡Bienvenido!
		p
			strong.color-1 REMEVET&nbsp;
			| es una publicación electrónica en español que está dirigida a los médicos
			| veterinarios, estudiantes de veterinaria, académicos y personas interesadas
			| en la medicina tanto de equinos, pequeñas especies y fauna silvestre en
			| general. En sus páginas se analizan temas actuales de la medicina veterinaria,
			| casos clínicos y procedimientos de vanguardia, con aportaciones de los
			| especialistas más reconocidos de nuestro país y del extranjero.
		p
			strong.color-1 REMEVET&nbsp;
			| es el mejor medio en español para estar actualizado y aprender sobre los
			| avances médicos, procedimientos actuales y casos clínicos.

		h3: a.color-1(href=ﬁ.bundles['about']) ¡ Conócenos !


	.large-8.columns: .cover-right: .cover-contain

		- var tmplink  = "/static/lib/pdf.js/web/viewer.html?file=/static/revista/pequenas-especies/pequenas-especies-020.pdf#page=64&zoom=page-fit&twoPageView=2"
		- var tmpimage = "background-image:url('/static/images/covers/gato.jpg')"

		article
			video.content(controls, autoplay, loop)
				source(src="/static/videos/COMFORTIS_ESP_VET_FINAL_H264.mp4", type="video/mp4")
				source(src="/static/videos/COMFORTIS_ESP_VET_FINAL_H264.ogg", type="video/ogg")

		article.color-0.color-bg-1

			main.content(style=tmpimage)

			nav.bottom.right.color-0
				header
					h3
						a(href=tmplink, target="_blank") Actualización en métodos de medición de la presión arterial sistémica en pequeños
					h4
						a(href=tmplink) MV Iván Álvarez MV César Mayorga

				footer: ul
					li: a(href=tmplink) Pequeñas Especies
					li: a(href=tmplink): span Leer Artículo


+rainbow()

.row.collapse.color-bg-2.color-lightest

	section.small-12.large-8.columns.color-bg-2.color-lightest
		header.color-bg-2
			a.uno(href=ﬁ.bundles['magazines']) Revistas
			a.dos(href=ﬁ.bundles['magazines']).color-bg-2.color-darker Ver mas

		main.row: for magazine in magazines
			- url = ﬁ.settings.app.pdf.url + magazine.file + ﬁ.settings.app.pdf.opts
			.small-4.columns.element
				a(href=url)
					img(src=magazine.image)
				footer.color-bg-0
					h4: a.color-primary(href=url)= magazine.name
					aside.color-bg-2.color-darker: a(href="#")= magazine.issue


	section.hide-for-medium-down.large-4.columns.color-bg-1.color-lightest
		header.color-bg-1
			a.uno(href=ﬁ.bundles['magazines']) Artículos

		main.row: .columns.small-12
			for article in articles
				-console.info(article)
				article(style='padding:0.5em; margin:0.5em').color-bg-0
					strong: a(href=article.href).color-primary= article.name
					div(style='text-align:right; margin-top:0.5em'): strong: a(href=article.href).color-secondary=article.author



+rainbow(true)
#clients.row.collapse: #clients-slider
	for advertiser in advertisers
		.slide: a(href=advertiser.href || '#', target="_blank", onclick="tracklOutboundLink('" + advertiser.href + "')", return)
			img(src=advertiser.src)
+rainbow()

.row.collapse

	section.small-12.columns.color-bg-3.color-lightest
		header.color-bg-3
			a.uno(href=ﬁ.bundles['magazines']) Eventos
			a.dos(href=ﬁ.bundles['magazines']).color-bg-3.color-darker Ver calendario

		main.row
			- var klass, base = 'element columns small-6 medium-4 large-2'
			for event,i in events
				- klass = base
				- if(i >= 2) klass += ' hide-for-small-only';
				- if(i >= 3) klass += ' hide-for-medium-only';
				div(class=klass)
					header.color-bg-0
						h4: a(href=ﬁ.bundles['events']).color-3.color-darker= ﬁ.datemonth(event.date.ini.getMonth())
						aside.color-bg-3.color-darker: a(href="#")= event.date.ini.getDay()
					a(href=ﬁ.bundles['events'])
						img(src=event.logo, width='100%')

+rainbow(true)
