include /../templates/mixins/rainbow
include /../templates/mixins/advertisers

.cover.row.collapse

	.small-12.columns: .cover-right: .cover-contain

		article.color-0.color-bg-2

			.content
				img(src=cover.image width="100%")

				nav.bottom.right.color-0
					header
						h3
							a(href=tmplink) Bases del Bienestar Animal en Fauna Silvestre
						h4
							a(href=tmplink) MVZ. M en C. Adriana Cossío Bayúgar

					footer: ul
						li: a(href=tmplink) Fauna Silvestre
						li: a(href=tmplink): span Leer Artículo

+rainbow()
+advertisers(advertisers)
+rainbow(true)

mixin magazine(magazine)
	- magazine.href  = ﬁ.settings.app.pdf.url + magazine.slug + magazine.file + '.html'
	- magazine.title = magazine.name + ': ' + magazine.issue

	a(href=magazine.href, target='_blank')
		img(src=magazine.image, alt=magazine.title, title=magazine.title, width='100%')
	footer.color-bg-0.hide-for-small-only
		h4: a.color-primary(href=magazine.href, target='_blank')= magazine.name
		aside.color-bg-2.color-darker: a(href=magazine.href, target='_blank')= magazine.issue

mixin magazine-n(name, n, magazine)
	div(class='columns element ' + name + '-' + n)
		+magazine(magazine)


.row.collapse.color-bg-2.color-lightest

	section.small-12.columns.color-bg-2.color-lightest

		header.color-bg-2
			a.uno(href=ﬁ.bundles['magazines']) Revistas
		- if(magazines.length%2) console.info('sssss')
		main.row: for magazine in magazines
			.small-6.medium-4.large-2.columns.element(style='margin-bottom:1em')
				+magazine(magazine)

+rainbow(true)
