extends ../views/templates/master
//-
	block meta
		meta(name="apple-mobile-web-app-capable", content="yes")
		meta(name="apple-mobile-web-app-status-bar-style", content="black-translucent")

block link
	link(rel="stylesheet", href="/static/swiper/swiper.css")
	style.
		.swiper-container, .swiper-slide {
			width  : 100%;
			height : 100%;
		}

block body
	.swiper-container.swiper-parent: .swiper-wrapper

		.swiper-slide
			include equinos/33/articulo/1


		.swiper-slide: .swiper-container.swiper-nested: .swiper-wrapper

			.swiper-slide
				include equinos/33/articulo/2

			.swiper-slide
				include equinos/33/articulo/2



		.swiper-slide
			include equinos/33/articulo/1

block script
	script(src="/static/swiper/swiper.js")
	script.

		$(document).ready(function(){

			$('.swiper-parent').swiper({
				mode:'horizontal',
				loop: false,
			});


			$('.swiper-nested').swiper({
				mode:'vertical',
				loop: false,
			});


		});

