extends ../views/templates/master
//-
	block meta
		meta(name="apple-mobile-web-app-capable", content="yes")
		meta(name="apple-mobile-web-app-status-bar-style", content="black-translucent")

block link
	link(rel="stylesheet", href="/static/swiper/swiper.css")
	style.
		.swiper-container, .swiper-slide {
			width  : 100%;
			height : 100%;
		}

block body
	.swiper-container.swiper-parent: .swiper-wrapper

		.swiper-slide

			include equinos/33/articulo/7

		.swiper-slide

			include equinos/33/articulo/1

		.swiper-slide: .swiper-container.swiper-nested: .swiper-wrapper

			.swiper-slide

				include equinos/33/articulo/2

			.swiper-slide.swiper-no-swiping

				include equinos/33/articulo/2

		.swiper-slide

			include equinos/33/articulo/1

		.swiper-slide

			include equinos/33/articulo/4


		.swiper-slide

			include equinos/33/articulo/5

		.swiper-slide.swiper-no-swiping

			include equinos/33/articulo/6


block script
	script(src="/static/swiper/swiper.js")
	script.
		$(document).ready(function(){

			var mySwiper = $('.swiper-parent').swiper({
				mode:'horizontal',
				loop: false,
				keyboardControl:true,
				noSwiping:true,
				onSlideChangeEnd: function(e){
					console.dir(e.activeSlide().index())
					if (e.activeSlide().index() == 3) {
						var v = document.getElementsByTagName("video")[0];
						v.play();
						}
					if (e.activeSlide().index() != 3) {
						var v = document.getElementsByTagName("video")[0];
						v.pause();
						}
				}
			});

			var mySwiperNested = $('.swiper-nested').swiper({
				mode:'vertical',
				loop: false,
			});

			$( ".next" ).click(function() {
				mySwiper.swipeNext();
			});


		});

